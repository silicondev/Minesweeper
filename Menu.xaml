<Window x:Class="Minesweeper.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Menu" Height="210" Width="220">
    <Grid Margin="0,0,0,0">
        <RadioButton x:Name="rdbDifficultyEasy" Content="EASY" HorizontalAlignment="Left" Margin="78,61,0,0" VerticalAlignment="Top" GroupName="grpDifficulty" Width="46"/>
        <RadioButton x:Name="rdbDifficultyMedium" Content="MEDIUM" HorizontalAlignment="Left" Margin="78,81,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="grpDifficulty"/>
        <RadioButton x:Name="rdbDifficultyHard" Content="HARD" HorizontalAlignment="Left" Margin="78,101,0,0" VerticalAlignment="Top" GroupName="grpDifficulty"/>
        <Label Content="Select Difficulty" HorizontalAlignment="Left" Margin="56,30,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top" Width="75" Click="btnStart_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="125,139,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
    </Grid>
</Window>
